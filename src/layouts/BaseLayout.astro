---
import "../styles/styles.css";
import "../styles/global.css";
import "../scripts/script.js";

const { title = "Bella Vista Restaurant" } = Astro.props;
const base = import.meta.env.BASE_URL;
const currentPath = Astro.url.pathname;
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>

        <!-- Google Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
    </head>
    <body>
        <header>
            <nav class="container">
                <a href={base} class="logo">Bella Vista</a>
                <ul class="nav-links">
                    <li>
                        <a
                            href={base}
                            class={currentPath === base ? "active" : ""}
                        >Home</a>
                    </li>

                    <li>
                        <a
                            href={base + "about"}
                            class={currentPath.startsWith(base + "about") ? "active" : ""}
                        >About</a>
                    </li>

                    <li>
                        <a
                            href={base + "menu"}
                            class={currentPath.startsWith(base + "menu") ? "active" : ""}
                        >Menu</a>
                    </li>

                    <li>
                        <a
                            href={base + "contact"}
                            class={currentPath.startsWith(base + "contact") ? "active" : ""}
                        >Contact</a>
                    </li>
                </ul>
            </nav>
        </header>
        <main>
            <slot />
            <!-- page-specific content goes here -->
        </main>
        <footer>
            <div class="container">
                <p>&copy; 2024 Bella Vista Restaurant. All rights reserved.</p>
            </div>
        </footer>

        <!-- <script src="/scripts/script.js" is:inline></script> -->
    </body>
    
</html>
